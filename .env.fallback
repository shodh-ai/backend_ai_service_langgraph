# Fallback environment configuration for local development without Google credentials
# Copy this file to .env to run the application without Google Cloud credentials

# API connection settings
API_BASE_URL=http://localhost:8000/api
API_KEY=development_api_key

# Database connection settings (only used if API is unavailable)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pronity
DB_USER=postgres
DB_PASSWORD=postgres

# LangSmith settings (optional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langsmith_api_key_here

# OpenAI settings (optional fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Fallback mode settings
USE_FALLBACK_MODELS=true
FALLBACK_MODEL_TYPE=rule_based  # Options: rule_based, openai (requires OPENAI_API_KEY)

# Application settings
PORT=5005
HOST=0.0.0.0
